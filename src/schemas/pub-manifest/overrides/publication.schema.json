    "accessMode": {
      "type": "array",
      "items": {
        "enum": [
          "auditory",
          "tactile",
          "textual",
          "visual",
          "colorDependent",
          "chartOnVisual",
          "chemOnVisual",
          "diagramOnVisual",
          "mathOnVisual",
          "musicOnVisual",
          "textOnVisual"
        ],
        "type": "string"
      },
      "default": [
        "textual",
        "visual"
      ],
      "uniqueItems": true
    },
    "accessModeSufficient": {
      "type": "array",
      "items": {
        "enum": [
          "auditory",
          "tactile",
          "textual",
          "visual"

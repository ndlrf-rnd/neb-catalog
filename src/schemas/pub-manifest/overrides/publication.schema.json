      },
      "default": [
        "textual",
        "visual"
      ],
      "uniqueItems": true
    },
    "inDirection": {
      "type": "string",
      "default": "auto",
      "enum": [
        "rtl",
        "ltr",
        "auto"
      ]
    },

    "accessibilityHazard": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "flashing",
          "noFlashingHazard",
          "motionSimulation",
          "noMotionSimulationHazard",
          "sound",
          "noSoundHazard",
          "unknown",
          "none"
        ]
